<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css" integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</head>


<div class="container">

    <h3>Total users: <%= users.length %></h3>
        <ul class="list-inline">
            <li class="list-inline-item">
                <form action="/users" class="form-inline pull-right btn-group" method="post">
                    <input type="number" class="form-control" name="n">
                    <button type="submit" class="btn btn-primary">Generate</button>
                </form>
            </li>
            <li class="list-inline-item">
                <form action="/" class="form-inline pull-right" method="get">
                    <button type="submit" class="btn btn-primary mb-2">Refresh</button>
                </form>
            </li>
            <li class="list-inline-item">
                <form action="/users/destroy" class="form-inline pull-right" method="post">
                    <button type="submit" class="btn btn-danger mb-2">Destroy</button>
                </form>
            </li>
        </ul>



    <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Bio</th>
        </tr>
    </thead>
    <tbody>
        <% users.each do |user| %>
        <tr>
            <td><%= user["name"] %></td>
            <td><%= user["email"] %></td>
            <td><%= user["bio"] %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>
